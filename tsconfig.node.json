{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./dist",
    // 加入SVG圖示types
    "types": ["element-plus/global","vite-plugin-svg-icons","node"],
    "esModuleInterop": true,

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"],
  "exclude": ["node_modules", "dist", "**/*.js"],
}
